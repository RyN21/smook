<h1>Sign Up</h1><br><br>

<%= form_tag "/users", method: :post do %>
  <%= label_tag :email %>
  <%= text_field_tag :email %><br>
  <%= label_tag :username %>
  <%= text_field_tag :username %><br>
  <%= label_tag :first_name %>
  <%= text_field_tag :first_name %><br>
  <%= label_tag :last_name %>
  <%= text_field_tag :last_name %><br>
  <%= label_tag :password %>
  <%= text_field_tag :password %><br>
  <%= label_tag :confirm_password %>
  <%= text_field_tag :confirm_password %><br><br><br>

  <%= submit_tag "Submit" %>
<% end %>
